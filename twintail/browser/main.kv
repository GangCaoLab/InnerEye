Root:
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Twintail Browser'
                    with_previous: False
                ActionGroup:
                    text: 'File'
                    mode: 'spinner'
                    ActionButton:
                        text: 'Open'
                        on_release: root.show_load()

        BoxLayout:
            BoxLayout:
                orientation: "vertical"

                MatplotFigure:
                    id: figure_wgt

                MatplotNavToolbar:
                    id: navbar_wgt
                    figure_widget: figure_wgt
                    size_hint_y: 0.07

                ZSlider:
                    id: z_slider
                    size_hint_y: 0.05


            TabbedPanel:
                size_hint_x: 0.3
                do_default_tab: False

                TabbedPanelItem:
                    text: 'View'
                    ViewTab:
                        id: view_tab

                TabbedPanelItem:
                    text: 'Anotation'
