<MatplotFigure>
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self._img_texture
        Color:
            rgba: 1, 0, 0, 0.5
        BorderImage:
            source: 'border.png'
            pos: self._box_pos
            size: self._box_size
            border: 3, 3, 3, 3

<MatplotNavToolbar>:
    orientation: 'vertical'
    home_btn: home_btn
    pan_btn: pan_btn
    zoom_btn: zoom_btn
    link_btn: link_btn
    info_lbl: info_lbl
    save_btn: save_btn
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Button:
                id: home_btn
                text: "Home"
            ToggleButton:
                id: pan_btn
                text: "Pan"
                group: "toolbar_btn"
            ToggleButton:
                id: zoom_btn
                text: "Zoom"
                group: "toolbar_btn"
            ToggleButton:
                id: link_btn
                text: "Link"
            Button:
                id: save_btn
                text: "Save"
        Label:
            size_hint_y: 0.4
            id: info_lbl
