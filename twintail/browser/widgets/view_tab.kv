<ViewTab>:
    cycles_grid: cycles_grid
    channels_grid: channels_grid

    orientation: 'tb-lr'
    spacing: 20

    ## Cycles
    BoxLayout:
        height: 120
        size_hint_y: None
        orientation: 'vertical'

        Label:
            text: "Cycles"

        BoxLayout:
            orientation: 'vertical'
            height: 100
            size_hint_y: None
            size_hint_x: 0.98
            pos_hint: {'center_x':0.5}

            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:  # table header
                Label:
                    text: "idx"
                Label:
                    text: "show"

            ScrollView:
                height: 80
                size_hint_y: None

                GridLayout:
                    id: cycles_grid
                    height:300
                    size_hint_y: None
                    cols: 2
                    row_force_default: True
                    row_default_height: 30

    ## Channels
    BoxLayout:

        height: 120
        size_hint_y: None
        orientation: 'vertical'

        Label:
            text: "Channels"

        BoxLayout:
            orientation: 'vertical'
            height: 100
            size_hint_y: None
            size_hint_x: 0.98
            pos_hint: {'center_x':0.5}

            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:  # table header
                Label:
                    text: "idx"
                Label:
                    text: "show"
                Label:
                    text: "color"

            ScrollView:
                height: 80
                size_hint_y: None

                GridLayout:
                    id: channels_grid
                    height:300
                    size_hint_y: None
                    cols: 3
                    row_force_default: True
                    row_default_height: 30
